
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<H1 class="text-center"> <a href="/"><img src="/images/logo.png" alt="" /></a> </H1>
<hr>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table table-hover user-list">
                            <thead>
                                <tr>
                                <th class="text-center"><span> Title</span></th>
                                <th><span>Date</span></th>
                                <th class="text-center"><span>Created-By</span></th>
                                <th>&nbsp;</th>
                                </tr>
                            </thead>

                            <tbody>
                            <% _.each(articles, function(article) { %>
                                <tr>
                                    <td>
                                        <img src="http://bootdey.com/img/Content/user_1.jpg" alt="">
                                        <a href="#" class="user-link"><%= article.title %> </a>
                                        
                                    </td>
                                    <td><%= article.dateCreated %></td>
                                    <td class="text-center">
                                        <span class="label label-default"><%= article.nick %></span>
                                    </td>
                                    <td><a href=" /article/singleArticle/ <%= article.id %> " class="btn btn-sm btn-primary">Show</a></td>
                                        <td><a href="#" class="btn btn-sm btn-warning">Edit</a></td>
                                    <td style="width: 20%;">
                                        
                                        <form action=" /article/destroy/ <%= article.id %> " method="POST">
                                        <input type="hidden" name="_method" value="Delete" />
                                        <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                                        </form>
                                    </td>
                                </tr>

                                <%})%>
                                <h3>Count: <%= articles.length %></h3>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>